# ==================================
# Environment Variables Template
# ==================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# Database (PostgreSQL / Supabase)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Exchange Rate API (optional - for automatic rate updates)
# The app uses dolarapi.com by default for Argentine peso rates
EXCHANGE_RATE_API_URL=https://dolarapi.com

# OpenAI API (optional - for voice command processing)
OPENAI_API_KEY=

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
